<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF7F7"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/strangerdinner"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/qmark"
            android:layout_margin="5dp"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/questionmark" />

        <Button
            android:background="#FFFFFF"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:gravity="center"
            android:typeface="serif"
            android:textStyle="bold|italic"
            android:onClick="getMeal"
            android:text="Eat with a Stranger?"/>

    </LinearLayout>

    <ImageView
        android:layout_below="@id/strangerdinner"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/goldstar"/>

    <LinearLayout
        android:id="@+id/frienddinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/strangerdinner"
        android:layout_marginTop="40dp">

        <Button
            android:background="#FFFFFF"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:gravity="center"
            android:typeface="serif"
            android:textStyle="bold|italic"
            android:text="Eat with a Friend!"/>

        <ImageView
            android:id="@+id/pizza"
            android:layout_margin="10dp"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:src="@drawable/pizzaparty"/>

    </LinearLayout>

    <ImageView
        android:layout_below="@id/frienddinner"
        android:layout_marginStart="320dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/goldstar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/frienddinner">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:src="@drawable/lollipop"/>

        <Button
            android:background="#FFFFFF"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:typeface="serif"
            android:textStyle="bold|italic"
            android:text="Check Up on Friends!"/>

    </LinearLayout>



</RelativeLayout>
